<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mw_anybox_layout">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal|right"
        android:padding="8dp">
    <ImageView
        android:id="@+id/mwCloseIcon"
        android:layout_height="44dp"
        android:layout_width="44dp"
        android:layout_margin="8dp"
        android:src="@drawable/magicworld_icon_close"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:padding="8dp">
        <LinearLayout
            android:id="@+id/mwUpgTab1"
            android:layout_height="124dp"
            android:layout_width="124dp"
            android:layout_margin="24dp"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/mw_anybox_layout">
            <ImageView
                android:id="@+id/mwHouseIcon"
                android:layout_height="55dp"
                android:layout_width="55dp"
                android:layout_margin="8dp"
                android:src="@drawable/magicworld_house_coinhouse" />
            <TextView
                android:id="@+id/mwHouseName"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="CoinHouse"
                android:textSize="16sp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/mwHouseLevel"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Lvl 1"
                android:textSize="14sp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>